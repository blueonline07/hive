generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  email       String      @unique
  password    String
  name        String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  sharedFiles FileShare[]
  ownedFiles  File[]      @relation("OwnedFiles")
}

model File {
  id         String      @id @default(uuid())
  name       String
  mimeType   String
  size       Int
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  ownerId    String
  bucket     String
  key        String
  owner      User        @relation("OwnedFiles", fields: [ownerId], references: [id])

  @@unique([key, bucket])
  @@map("files")
}